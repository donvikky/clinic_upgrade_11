<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Add new field to Payroll form -->
        <record id="hr_payslip_form_worked_days" model="ir.ui.view">
			<field name="name">hr.payslip.form.worked_days</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
			<field name="arch" type="xml">
                <field name="credit_note" position="after">
                    <field name="worked_days_in_month"/>
                </field>
			</field>
		</record>
    </data>
</odoo>